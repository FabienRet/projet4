{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}
{% block content %}

<h1>Administration</h1>
<p>En construction</p>
    <div id="contenu">
        <ul>
            <li><a href="../public/index.php?route=add_article">Créer un nouvel article</a></br></li>
            <li><a href="../public/index.php?route=reportComment">Liste des commentaires signalées</a></li>
            <li><a href="../public/index.php?route=listUser">Liste des utilisateurs</a></li>
            <li>{{ parent() }}</li>
